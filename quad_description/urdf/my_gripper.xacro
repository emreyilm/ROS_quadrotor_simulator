<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Main gripper link -->
  <xacro:macro name="my_gripper_macro">
  <material name="blue">
      <color rgba="0 0 0.8 1"/>
    </material>
    <material name="black">
      <color rgba="0 0 0 1"/>
    </material>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>

    <joint name="base1_joint" type="fixed">
      <origin xyz="0.025 0 -0.25" rpy="0 0 0" />
      <parent link="base_link"/>
      <child link="riser" />
    </joint>

    <link name="riser">
      <visual>
        <geometry>
          <box size="0.025 0.025 0.25"/>
        </geometry>
        <origin rpy="0 0 0" xyz="-0.025 0.0 0.125"/>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.025 0.025 0.25"/>
        </geometry>
        <origin rpy="0 0 0" xyz="-0.025 0.0 0.125"/>
      </collision>
      <inertial>
        <mass value="0.2"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>

    <link name="palm">
      <visual>
        <geometry>
          <box size="0.025 0.05 0.025"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0.0125"/>
        <material name="black"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.025 0.05 0.025"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 2.0125"/>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>

    <link name="left_finger">
      <visual>
        <geometry>
          <box size="0.025 0.075 0.025"/>
        </geometry>
        <origin rpy="0 0 -0.78539" xyz="0.0265 0.039 0.0125"/>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.025 0.075 0.025"/>
        </geometry>
        <origin rpy="0 0 -0.78539" xyz="0.0265 0.039 0.0125"/>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>


    <link name="left_finger_tip">
      <visual>
        <geometry>
          <box size="0.025 0.05 0.025"/>
        </geometry>
        <origin rpy="0 0 1.5707" xyz="0.078 0.0405 0.0125"/>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.025 0.05 0.025"/>
        </geometry>
        <origin rpy="0 0 1.5707" xyz="0.078 0.0405 0.0125"/>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>

    <link name="right_finger">
      <visual>
        <geometry>
          <box size="0.025 0.075 0.025"/>
        </geometry>
        <origin rpy="0 0 0.78539" xyz="0.0265 -0.039 0.0125"/>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.025 0.075 0.025"/>
        </geometry>
        <origin rpy="0 0 0.78539" xyz="0.0265 -0.039 0.0125"/>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>

    <link name="right_finger_tip">
      <visual>
        <geometry>
          <box size="0.025 0.05 0.025"/>
        </geometry>
        <origin rpy="0 0 1.5707" xyz="0.078 -0.0905 0.0125"/>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.025 0.05 0.025"/>
        </geometry>
        <origin rpy="0 0 1.5707" xyz="0.078 -0.0905 0.0125"/>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>

    <joint name="palm_left_finger" type="revolute">
      <axis xyz="0 0 1"/>
      <limit lower="-0.2" upper="0.2" effort="2.5" velocity="1.0"/>
      <origin rpy="0 0 0" xyz="0 -0.025 0"/>
      <parent link="palm"/>
      <child link="left_finger"/>
    </joint>

    <joint name="left_finger_tip" type="revolute">
      <axis xyz="0 0 1"/>
      <limit lower="-0.1" upper="0.1" effort="2.5" velocity="1.0"/>
      <origin rpy="0 0 0" xyz="0 0.025 0"/>
      <parent link="left_finger"/>
      <child link="left_finger_tip"/>
    </joint>

    <joint name="palm_right_finger" type="revolute">
      <axis xyz="0 0 1"/>
      <limit lower="-0.2" upper="0.2" effort="2.5" velocity="1.0"/>
      <origin rpy="0 0 0" xyz="0 0.025 0"/>
      <parent link="palm"/>
      <child link="right_finger"/>
    </joint>

    <joint name="right_finger_tip" type="revolute">
      <axis xyz="0 0 1"/>
      <limit lower="-0.1" upper="0.1" effort="2.5" velocity="1.0"/>
      <origin rpy="0 0 0" xyz="0 0.025 0"/>
      <parent link="right_finger"/>
      <child link="right_finger_tip"/>
    </joint>


    <joint name="palm_riser" type="fixed">
      <axis xyz="0 0 1"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <parent link="riser"/>
      <child link="palm"/>
    </joint>

  </xacro:macro>
  
    <transmission name="tran1">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="palm_left_finger">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="motor1">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="tran2">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="left_finger_tip">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="motor2">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="tran3">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="palm_right_finger">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="motor3">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="tran4">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="right_finger_tip">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="motor4">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <!--<transmission name="tran5">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="palm_riser">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="motor5">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>-->

  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/manipulator</robotNamespace>
    </plugin>
  </gazebo>

</robot>
